{
	"name": "sahabatguru-backend",
	"version": "1.0.0",
	"description": "SahabatGuru - AI Assistant Platform for Teachers and Students",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/main.ts",
		"build": "tsc",
		"start": "node dist/main.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx src/libs/db/migrate.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"test": "vitest",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"lint": "eslint src --ext .ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@hono/node-server": "^1.13.7",
		"@hono/zod-validator": "^0.4.2",
		"@google-cloud/storage": "^7.14.0",
		"bcryptjs": "^2.4.3",
		"drizzle-orm": "^0.36.4",
		"hono": "^4.6.14",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.13.1",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"socket.io": "^4.8.1",
		"zod": "^3.24.1",
		"uuid": "^11.0.5"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.10.5",
		"@types/pg": "^8.11.10",
		"@types/uuid": "^10.0.0",
		"drizzle-kit": "^0.30.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
